{
    "version": 6,
    "configurePresets": [
        {
            "name": "Development",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Development",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Development/install"
            },
            "hidden": false
        },
        {
            "name": "ErrorCheck",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/ErrorCheck",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/ErrorCheck/install",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-sanitize-recover=all",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-sanitize-recover=all",
                "CMAKE_EXE_LINKER_FLAGS": "-rdynamic",
                "CMAKE_SHARED_LINKER_FLAGS": "-rdynamic"
            },
            "hidden": false
        },
        {
            "name": "RelWithDebInfo",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/RelWithDebInfo/install"
            },
            "hidden": false
        },
        {
            "name": "Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Release/install"
            },
            "hidden": false
        }
    ],
    "buildPresets": [
        { "name": "Development",    "configurePreset": "Development" },
        { "name": "ErrorCheck",     "configurePreset": "ErrorCheck" },
        { "name": "RelWithDebInfo", "configurePreset": "RelWithDebInfo" },
        { "name": "Release",        "configurePreset": "Release" }
    ],
    "workflowPresets": [
        {
            "name": "Development",
            "steps": [
                { "type": "configure", "name": "Development" },
                { "type": "build", "name": "Development" }
            ]
        },
        {
            "name": "ErrorCheck",
            "steps": [
                { "type": "configure", "name": "ErrorCheck" },
                { "type": "build", "name": "ErrorCheck" }
            ]
        },
        {
            "name": "RelWithDebInfo",
            "steps": [
                { "type": "configure", "name": "RelWithDebInfo" },
                { "type": "build", "name": "RelWithDebInfo" }
            ]
        },
        {
            "name": "Release",
            "steps": [
                { "type": "configure", "name": "Release" },
                { "type": "build", "name": "Release" }
            ]
        }
    ]
}
