{
    "version": 6,
    "configurePresets": [
        {
            "name": "oscar_third-party_Development",
            "displayName": "Oscar Third-Party Code (Development)",
            "description": "Configure Oscar's third-party code build suitable for day-to-day development (not necessarily RelWithDebInfo or Debug)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Development",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Development/install"
            },
            "hidden": false
        },
        {
            "name": "oscar_third-party_ErrorCheck",
            "displayName": "Oscar Third-Party Code (ErrorCheck)",
            "description": "Configure Oscar's third-party code build suitable for error-checking development (Debug, libASAN, clang-tidy)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/ErrorCheck",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/ErrorCheck/install",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-sanitize-recover=all",
                "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-sanitize-recover=all",
                "CMAKE_EXE_LINKER_FLAGS": "-rdynamic",
                "CMAKE_SHARED_LINKER_FLAGS": "-rdynamic"
            },
            "hidden": false
        },
        {
            "name": "oscar_third-party_RelWithDebInfo",
            "displayName": "Oscar Third-Party Code (RelWithDebInfo)",
            "description": "Configure Oscar's third-party code build with a standard RelWithDebInfo configuration",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/RelWithDebInfo/install"
            },
            "hidden": false
        },
        {
            "name": "oscar_third-party_Release",
            "displayName": "Oscar Third-Party Code (Release)",
            "description": "Configure Oscar's third-party code build with a standard Release configuration",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Release/install"
            },
            "hidden": false
        }
    ],
    "buildPresets": [
        {
            "name": "oscar_third-party_Development",
            "configurePreset": "oscar_third-party_Development"
        },
        {
            "name": "oscar_third-party_ErrorCheck",
            "configurePreset": "oscar_third-party_ErrorCheck"
        },
        {
            "name": "oscar_third-party_RelWithDebInfo",
            "configurePreset": "oscar_third-party_RelWithDebInfo"
        },
        {
            "name": "oscar_third-party_Release",
            "configurePreset": "oscar_third-party_Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "oscar_third-party_Development",
            "description": "Configure + Build Oscar's third-party dependencies for day-to-day development (not necessarily RelWithDebInfo or Debug)",
            "steps": [
                { "type": "configure", "name": "oscar_third-party_Development" },
                { "type": "build", "name": "oscar_third-party_Development" }
            ]
        },
        {
            "name": "oscar_third-party_ErrorCheck",
            "description": "Configure + Build Oscar's third-party dependencies for error-checking development",
            "steps": [
                { "type": "configure", "name": "oscar_third-party_ErrorCheck" },
                { "type": "build", "name": "oscar_third-party_ErrorCheck" }
            ]
        },
        {
            "name": "oscar_third-party_RelWithDebInfo",
            "description": "Configure + build oscar's third-party dependencies (RelWithDebInfo build)",
            "steps": [
                { "type": "configure", "name": "oscar_third-party_RelWithDebInfo" },
                { "type": "build", "name": "oscar_third-party_RelWithDebInfo" }
            ]
        },
        {
            "name": "oscar_third-party_Release",
            "description": "Configure + build oscar's third-party dependencies (Release build)",
            "steps": [
                { "type": "configure", "name": "oscar_third-party_Release" },
                { "type": "build", "name": "oscar_third-party_Release" }
            ]
        }
    ]
}
