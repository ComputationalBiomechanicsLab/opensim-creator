{
    "version": 6,
    "configurePresets": [
        {
            "name": "Development",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Development",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Development/install"
            }
        },
        {
            "name": "ErrorCheck",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/ErrorCheck",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/ErrorCheck/install",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "RelWithDebInfo",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/RelWithDebInfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/RelWithDebInfo/install"
            }
        },
        {
            "name": "Release",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Release/install"
            }
        },
        {
            "name": "Release-MacOS-amd64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Release-MacOS-amd64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Release-MacOS-amd64/install",
                "CMAKE_OSX_ARCHITECTURES": "x86_64",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "14.5",
                "CMAKE_OSX_SYSROOT": "/Library/Developer/CommandLineTools/SDKs/MacOSX14.5.sdk/"
            }
        },
        {
            "name": "Release-MacOS-arm64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/../build/third_party/Release-MacOS-arm64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/third_party/Release-MacOS-arm64/install",
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "CMAKE_OSX_DEPLOYMENT_TARGET": "14.5",
                "CMAKE_OSX_SYSROOT": "/Library/Developer/CommandLineTools/SDKs/MacOSX14.5.sdk/"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "Development",
            "configurePreset": "Development"
        },
        {
            "name": "ErrorCheck",
            "configurePreset": "ErrorCheck"
        },
        {
            "name": "RelWithDebInfo",
            "configurePreset": "RelWithDebInfo"
        },
        {
            "name": "Release",
            "configurePreset": "Release"
        },
        {
            "name": "Release-MacOS-amd64",
            "configurePreset": "Release-MacOS-amd64"
        },
        {
            "name": "Release-MacOS-arm64",
            "configurePreset": "Release-MacOS-arm64"
        }
    ],
    "workflowPresets": [
        {
            "name": "Development",
            "steps": [
                { "type": "configure", "name": "Development" },
                { "type": "build",     "name": "Development" }
            ]
        },
        {
            "name": "ErrorCheck",
            "steps": [
                { "type": "configure", "name": "ErrorCheck" },
                { "type": "build",     "name": "ErrorCheck" }
            ]
        },
        {
            "name": "RelWithDebInfo",
            "steps": [
                { "type": "configure", "name": "RelWithDebInfo" },
                { "type": "build",     "name": "RelWithDebInfo" }
            ]
        },
        {
            "name": "Release",
            "steps": [
                { "type": "configure", "name": "Release" },
                { "type": "build",     "name": "Release" }
            ]
        },
        {
            "name": "Release-MacOS-amd64",
            "steps": [
                { "type": "configure", "name": "Release-MacOS-amd64" },
                { "type": "build",     "name": "Release-MacOS-amd64" }
            ]
        },
        {
            "name": "Release-MacOS-arm64",
            "steps": [
                { "type": "configure", "name": "Release-MacOS-arm64" },
                { "type": "build",     "name": "Release-MacOS-arm64" }
            ]
        }
    ]
}
