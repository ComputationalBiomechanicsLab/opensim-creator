COMP_DIR=$1
COMPILER=$2
STANDARD=$3
CXXFLAGS=$4
cd ${COMP_DIR}/cpp${STANDARD}
echo cmake -DMDSPAN_ENABLE_TESTS=ON -DMDSPAN_ENABLE_BENCHMARKS=ON -DCMAKE_CXX_FLAGS="'${CXXFLAGS}'" -DCMAKE_CXX_STANDARD=${STANDARD} -DMDSPAN_CXX_STANDARD=${STANDARD} -DCMAKE_CXX_COMPILER=${COMPILER} -DCMAKE_CXX_EXTENSIONS=OFF ${MDSPAN_SOURCE}
cmake -DMDSPAN_ENABLE_TESTS=ON -DMDSPAN_ENABLE_BENCHMARKS=ON -DCMAKE_CXX_FLAGS="'${CXXFLAGS}'" -DCMAKE_CXX_STANDARD=${STANDARD} -DMDSPAN_CXX_STANDARD=${STANDARD} -DCMAKE_CXX_COMPILER=${COMPILER} -DCMAKE_CXX_EXTENSIONS=OFF ${MDSPAN_SOURCE}

