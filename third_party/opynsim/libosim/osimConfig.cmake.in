@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

if(@OPYN_USE_OPENBLAS@)  # ON if `libosim` was compiled with OpenBLAS
    find_dependency(OpenBLAS REQUIRED)
else()
    # Fall back to system-provided BLAS/LAPACK
    find_dependency(BLAS    REQUIRED)
    find_dependency(LAPACK  REQUIRED)
endif()

# this should be built by the "superbuild"ing `opynsim/third_party`
# because OpenSim strongly depends on a particular version of
# spdlog (grrr)
find_dependency(spdlog REQUIRED)

include("${CMAKE_CURRENT_LIST_DIR}/osimTargets.cmake")

check_required_components("osim")
