COMP_DIR=$1
COMPILER=$2
STANDARD=$3
CXXFLAGS=$4
cd ${COMP_DIR}/cpp${STANDARD}
cmake -DMDSPAN_ENABLE_TESTS=ON -DMDSPAN_ENABLE_BENCHMARKS=ON -DCMAKE_CUDA_FLAGS="'${CXXFLAGS}' --extended-lambda --expt-relaxed-constexpr" -DCMAKE_CXX_STANDARD=${STANDARD} -DMDSPAN_CXX_STANDARD=${STANDARD} -DCMAKE_CXX_COMPILER=${COMPILER} -DCMAKE_CXX_EXTENSIONS=OFF -DMDSPAN_ENABLE_CUDA=ON -DCMAKE_CUDA_ARCHITECTURES=70 ${MDSPAN_SOURCE}

